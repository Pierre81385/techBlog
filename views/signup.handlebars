<div class="card">
  <h3 class="card-header">Sign Up</h3>
  <h4>Please enter a desired Username and Password to sign up.</h4>
  <form id="signupForm" class="card-body">
    <label for="username" class="form-label">Username</label>
    <input id="signupUsername" type="text" class="form-input" />

    <label class="form-label" for="password">Password</label>
    <input id="signupPassword" type="password" class="form-input" />

    <button id="signupFormButton" type="submit" class="btn">SUBMIT</button>
    <h3>Already have an account?</h3>
    <a class="login-link" href="/login">LOGIN</a>
  </form>
</div>

<script src="/javascript/signup.js"></script>